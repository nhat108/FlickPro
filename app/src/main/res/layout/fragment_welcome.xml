<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/NUXcolorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="92dp"
        android:src="@drawable/flickr_icon" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="94dp"
        android:src="@drawable/flickr" />

    <Button
        android:textColor="@android:color/white"
        android:id="@+id/log_in_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/sign_up_button"
        android:layout_alignEnd="@+id/sign_up_button"
        android:layout_alignBottom="@id/sign_up_button"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="70dp "
        android:background="@drawable/button_log_in"
        android:text="Log in" />

    <Button
        android:textColor="@android:color/white"
        android:id="@+id/sign_up_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="143dp"
        android:background="@drawable/button_sign_up"
        android:text="Sign up" />






</RelativeLayout>